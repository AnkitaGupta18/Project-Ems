@using EMS.Domain
@model EMS.Models.EmployeeViewModels
@{
    ViewBag.Title = "Add";
}
<div class="row">
    @using (Html.BeginForm("Add", "Employee", FormMethod.Post)) {
        <div class="col-md-12">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(x => x.Name)
                    @Html.TextBoxFor(x => x.Name)
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(x => x.EmployeeType)
                    @Html.DropDownListFor(x => x.EmployeeType, EnumHelper.GetSelectList(typeof (EmployeeType)), "Select Employee Type", new {@class = "form-control"})
                </div>
            </div>
            @*<div class="clearfix"></div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(x => x.ProjectId)
                    @Html.DropDownListFor(x => x.ProjectId, new SelectList(Model.ProjectList, "Key", "Value"), "Select Project", new {@class = "form-control"})
                </div>
            </div>*@
            <div class="clearfix"></div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(x => x.UserName)
                    @Html.TextBoxFor(x => x.UserName)
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(x=>x.Password)
                    @Html.TextBoxFor(x=>x.Password)
                </div>
            </div>
            <div class="clearfix"></div>
            <div><input type="submit" class="btn btn-primary" value="Save"/></div>
        </div>
    }
</div>