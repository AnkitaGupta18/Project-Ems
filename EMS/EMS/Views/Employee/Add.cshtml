@using EMS.Domain
@model EMS.Models.EmployeeViewModels
@{
    ViewBag.Title = "Add";
}

<div class="row">

    <div class="col-md-9">
        <div class="col-md-6">
            <div class="box">
                <div class="box-header">
                    <h2>Employee Details</h2>
                </div>
                <div class="box-divider m-a-0"></div>
                <div class="box-body">
                    @using (Html.BeginForm("Add", "Employee", FormMethod.Post))
                    {
                        <div class="form-group row">
                            @Html.LabelFor(x => x.Name, new {@class = "col-sm-2 form-control-label"})
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(x => x.EmployeeType, new {@class = "col-sm-2 form-control-label"})
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.EmployeeType, EnumHelper.GetSelectList(typeof (EmployeeType)), "Select Employee Type", new {@class = "form-control c-select"})

                            </div>
                        </div>
                        @*<div class="form-group row">
                            @Html.LabelFor(x => x.ProjectId, new {@class = "col-sm-2 form-control-label"})
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.ProjectId, new SelectList(Model.ProjectList, "Key", "Value"), "Select Project", new {@class = "form-control c-select"})
                            </div>
                        </div>*@
                        <div class="form-group row">
                            @Html.LabelFor(x => x.UserName, new {@class = "col-sm-2 form-control-label"})
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.UserName, new {@class = "form-control"})
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(x => x.Password, new {@class = "col-sm-2 form-control-label"})
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Password, new {@class = "form-control"})
                            </div>
                        </div>
                        <div class="form-group row m-t-md">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn white">Sign in</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>